<?xml version="1.0"?>
<launch>

    <arg name="experimentId" default="1" />

    <group ns="uav2">

        <!-- MAVROS -->
        <include file="$(find mavros)/launch/px4.launch">
            <arg name="fcu_url" value="/dev/serial0:57600"/>
            <arg name="gcs_url" value=""/>
            <arg name="tgt_system" value="1"/>
            <arg name="tgt_component" value="1"/>
        </include>

        <!-- worker node -->
        <node pkg="multi_uav_se_mission" name="worker_node" type="worker_node" output="screen">
            <param name="uavId" value="2" />
            <param name="altitude" value="6.0" />
            <param name="taskTypes" value="1,2,3" />
            <param name="taskAssignAtSeconds" value="10" />
            <param name="serialPort" value="/dev/ttyUSB0" />
            <param name="baud" value="57600" />
            <remap from="statistics" to="/uav2/statistics/data" />
            <remap from="statisticsLog" to="/uav2/statistics/log" />
            <remap from="statisticsMessages" to="/uav2/statistics/messages" />
            <remap from="statisticsTasks" to="/uav2/statistics/tasks" />
        </node>

        <!-- rosbag -->
        <node pkg="rosbag" type="record" name="record" args="-o $(find multi_uav_se_mission)/bag/uav2_$(arg experimentId) -a -x (.*)/camera(.*)"/>

    </group>

</launch>
